{
  "name": "pagiko",
  "version": "0.1.0",
  "description": "PDF generation library that feels like home. Make PDFs the way you build UIs thanks to Tailwind and Flexbox.",
  "author": "Mikkel ALMONTE--RINGAUD <contact@vexcited.com> (https://github.com/Vexcited)",
  "license": "MIT",
  "homepage": "https://github.com/Vexcited/Pagiko",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Vexcited/Pagiko.git"
  },
  "bugs": {
    "url": "https://github.com/Vexcited/Pagiko/issues"
  },
  "keywords": [
    "pdf",
    "pdf-lib",
    "pdflib",
    "tailwind",
    "node",
    "browser",
    "pdfjs"
  ],
  "sideEffects": false,
  "exports": {
    "import": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    },
    "require": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup"
  },
  "dependencies": {
    "@cantoo/pdf-lib": "^2.4.4",
    "yoga-layout": "^3.2.1"
  },
  "devDependencies": {
    "@swc/core": "^1.13.5",
    "@types/bun": "^1.2.21",
    "@vexcited/eslint-config": "^0.1.1",
    "eslint": "^9.35.0",
    "jiti": "^2.5.1",
    "terser": "^5.44.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  }
}
